model MessageUserState {
  messageId      String
  userId         String
  status         MessageStatus
  deletedForUser Boolean       @default(false)

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  message Message @relation(fields: [messageId], references: [id])

  @@id([messageId, userId])
  @@index([userId])
  @@map("MessageUserState")
}
